<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/field_pop_bg_harvest">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="280dp"
        android:layout_height="380dp"
        android:background="@drawable/field_pop_bg_harvest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="166dp"
            android:layout_height="166dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <Button
            android:id="@+id/btn_sheng"
            android:layout_width="135dp"
            android:layout_height="32dp"
            android:background="@drawable/dialog_getgood_btn1_bg"
            android:text="生长期190s"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"></Button>

        <TextView
            android:id="@+id/tv_goodname"
            android:layout_width="89dp"
            android:layout_height="22dp"
            android:layout_marginTop="12dp"
            android:text="玫瑰花种*10"
            android:textColor="#ffa1782f"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_sheng" />

        <TextView
            android:id="@+id/tv_where"
            android:layout_width="91dp"
            android:layout_height="18dp"
            android:layout_marginTop="20dp"
            android:text="请在仓库中查看"
            android:textColor="#ffbc9062"
            android:textSize="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_goodname" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="221dp"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/field_pop_btn_double"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_where"></Button>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>